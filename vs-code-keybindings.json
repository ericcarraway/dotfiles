[
  // as is normal behavior,
  // shift+cmd+f shows the search if it's not visible
  {
    "key": "shift+cmd+f",
    "command": "workbench.view.search",
    "when": "!searchViewletVisible"
  },

  // this customization hides the search when it is visible
  {
    "key": "shift+cmd+f",
    "command": "workbench.action.closeSidebar",
    "when": "searchViewletVisible"
  },

